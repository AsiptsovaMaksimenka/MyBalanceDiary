<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.watertracker.HistoryWaterFragment">


    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="362dp"
        android:layout_height="357dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="353dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLast7"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="267dp"
        android:layout_marginBottom="289dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Past 7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonLast30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="289dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Past 30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="295dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="289dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="All"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/WaterSummary"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="509dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="170dp"
        android:text=" "
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WaterPercent"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="589dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="90dp"
        android:text=""
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/achive"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="648dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/c"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/green"
        android:layout_width="21dp"
        android:layout_height="25dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="609dp"
        android:layout_marginEnd="373dp"
        android:layout_marginBottom="97dp"
        android:src="@drawable/green"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="21dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="373dp"
        android:layout_marginBottom="186dp"
        android:src="@drawable/blue"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>